<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xebia.xtime"
    android:versionCode="1401181440"
    android:versionName="1.0.1">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_xebia"
        android:label="@string/app_name"
        android:theme="@style/Theme.Xebia">
        <activity android:name=".OverviewActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.xebia.xtime.login.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible"/>
        <activity
            android:name="com.xebia.xtime.dayoverview.DayOverviewActivity"
            android:label="@string/title_activity_day_overview"/>
        <activity
            android:name="com.xebia.xtime.editor.EditTimeSheetActivity"
            android:label="@string/title_activity_edit_time_cell">
        </activity>
    </application>

</manifest>
