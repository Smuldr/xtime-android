<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    style="@style/ListItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
        tools:text="ACME app development consultancy ***"/>

    <TextView
        android:id="@+id/work_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/project"
        android:layout_toLeftOf="@+id/hours"
        android:layout_marginBottom="4dp"
        android:layout_toStartOf="@+id/hours"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        tools:text="Consultancy standard"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/work_type"
        android:layout_toLeftOf="@+id/hours"
        android:layout_toStartOf="@+id/hours"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        tools:text="description"/>

    <TextView
        android:id="@+id/description_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/work_type"
        android:layout_toLeftOf="@+id/hours"
        android:layout_toStartOf="@+id/hours"
        android:singleLine="true"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textStyle="italic"
        android:textColor="@android:color/darker_gray"
        android:text="@string/description_placeholder"
        tools:visibility="gone"/>

    <TextView
        android:id="@+id/hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@+id/description"
        android:paddingEnd="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
        android:text="@string/hours_label"
        tools:text="8.25 hrs"/>

</RelativeLayout>
