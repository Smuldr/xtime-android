<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="xebia_purple">#663366</color>
    <color name="month_table_background">#f3f3f3</color>
    <color name="month_table_border">#e0e0e0</color>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="MonthOverviewCell">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:background">@color/month_table_background</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="MonthOverviewCell.ProjectCell">
        <item name="android:layout_width">200dp</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MonthOverviewCell.Heading">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceInverse</item>
    </style>

    <style name="MonthOverviewCell.Heading.ProjectCell">
        <item name="android:layout_width">200dp</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MonthOverviewRow">
        <item name="android:background">@color/month_table_border</item>
    </style>

    <style name="MonthOverviewHeading">
        <item name="android:background">@drawable/ab_stacked_solid_xebia</item>
    </style>

</resources>
